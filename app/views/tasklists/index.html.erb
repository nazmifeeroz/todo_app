
<div id="wrapper">
        
        <%= render 'layouts/nav' %>
        
            <div id="page-content-wrapper">
            <div class="container-fluid">
              <a href="#menu-toggle" class="btn btn-warning" id="menu-toggle"><span id="menuButt" class="fa fa-list fa-2x"></span></a>
<%= render 'layouts/quotes' %>
<%= render 'layouts/message' %>
<div class="container" id="taskCont">
	<div class="panel">
		<div class="panel-heading" style="background-color: #FF7043;">
			<h1 class="panel-title" style="color: white;"><i class="fa fa-calendar" aria-hidden="true"></i> Tasks</h1>
		</div>
		<div id="accCont">
		<div class="panel-group" id="accordion">

                <% @list.each do |l| %>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>
                            <a data-toggle="collapse" data-parent="#accordion" href="#<%= l.id %>"><span class="fa fa-tasks">
                            </span> <%= l.listname %></a>
                        </h4>
                    </div>
                    <div id="<%= l.id %>" class="panel-collapse collapse">
                        <table class="table table-hover">
                        	<thead>
                        		<th>Title</th>
                        		<th>Due Date</th>
                        		<th>Status</th>
                        	</thead>
                        	<tbody>
                                <% l.tasks.each do |t| %>
                        		<tr>
                        			<td><%= t.tasktitle %></td>
                        			<td><%= t.taskdue %></td>
                        			<td> <span class="label label-<%= t.taskstatus %>">
                                    <%= if t.taskstatus == 'danger' then 'Incomplete' end %>
                                    <%= if t.taskstatus == 'warning' then 'In Progress' end %>
                                    <%= if t.taskstatus == 'success' then 'Complete' end%></span> </td>
                        			<td> <%= link_to 'View', edit_tasklist_task_path(tasklist_id:l.id, id:t.id), class: "btn btn-info btn-xs" %></td>
                        			<td><%= link_to "Delete", tasklist_task_path(tasklist_id:l.id, id:t.id) , method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %></td>
                        		</tr>
                                <% end %>
                        	</tbody>
                        </table>
                    </div>
                </div>
				<% end %>

      <%= render 'layouts/modals' %>
       </div> 
        </div>
    </div></div></div></div>
    <div id="bgChange"><button class="btn btn-default " data-toggle="modal" data-target="#bgModal"><span class="fa fa-picture-o"></span></button></div>
